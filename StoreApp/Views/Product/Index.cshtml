@model List<Product>


<div class="row">
    <div class="col-md-3">@await Component.InvokeAsync("CategoriesMenu")</div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-2 m-4">
                    <partial name="_ProductCard" model="item" />
                </div>
            }
        </div>
    </div>
</div>



@section Footer {
    <div>
        Only for Product Home Page Footer
    </div>
}