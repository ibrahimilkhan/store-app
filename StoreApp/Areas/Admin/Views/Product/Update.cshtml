@model ProductDtoForUpdate

<div class="text-center my-3">
    <div class="display-6">Update</div>
</div>

<form class="mx-auto" style="max-width: 600px;" method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group m-4">
        <label asp-for="CategoryId"><i class="fa-solid fa-table-list"></i> Category</label>
        <select class="form-select my-2" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>

    <div class="form-group m-4">
        <label asp-for="Name" class="display-8"><i class="fa-regular fa-address-card"></i> Name
        </label>
        <input class="form-control my-2" asp-for="Name" />
    </div>

    <div class="form-group m-4">
        <label asp-for="Price" class="display-8"> <i class="fa-solid fa-tag"></i> Price
        </label>
        <input class="form-control my-2" asp-for="Price" />
    </div>

    <div class="form-group m-4">
        <label asp-for="Summary" class="display-8"></label>
        <input class="form-control" asp-for="Summary" />
    </div>

    <div class="form-group m-2">
        <img src="@Model.ImageUrl" alt="test" width="40%">
        <input class="form-control" name="file" type="file" />
    </div>

    <div class="d-flex justify-content-between m-4">
        <div>
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-floppy-disk"></i>
                Update
            </button>

        </div>

        <div>
            <button class="btn btn-danger" type="reset">
                <i class="fa-solid fa-rotate-left"></i>
                Reset
            </button>
            <a asp-action="Index" class="btn btn-secondary ml-2" type="button">
                <i class="fa-solid fa-circle-left"></i>
                Back
            </a>

        </div>
    </div>
</form>