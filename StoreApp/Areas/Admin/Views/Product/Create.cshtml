@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form class="mx-auto" style="max-width: 600px;" method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group m-4">
        <label asp-for="CategoryId">Category</label>
        <select class="form-control my-2" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>

    <div class="form-group m-4">
        <label asp-for="Name" class="display-8"></label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="form-group m-4">
        <label asp-for="Summary" class="display-8"></label>
        <input class="form-control" asp-for="Summary" />
    </div>

    <div class="form-group m-4">
        <label asp-for="Price" class="display-8"></label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="form-group m-4">
        <label asp-for="ImageUrl" class="display-8"></label>
        <input class="form-control" name="file" type="file" />
    </div>

    <div class="d-flex justify-content-between m-4">
        <div>
            <button class="btn btn-primary" type="submit">
                <i class="fa-solid fa-floppy-disk"></i>
                Save
            </button>
        </div>

        <div>
            <button class="btn btn-danger" type="reset">
                <i class="fa-solid fa-rotate-left"></i>
                Reset
            </button>
            <a asp-action="Index" class="btn btn-secondary ml-2" type="button">
                <i class="fa-solid fa-circle-left"></i>
                Back
            </a>

        </div>
    </div>
</form>